<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>exemploAutenticacao</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>validaSenhaLogin</servlet-name>
    <servlet-class>br.com.exemploAutenticacao.login.servlet.validaSenhaLogin</servlet-class>
  </servlet>
  <filter>
    <display-name>filtroLogin</display-name>
    <filter-name>filtroLogin</filter-name>
    <filter-class>br.com.exemploAutenticacao.loginFiltro.filtroLogin</filter-class>
  </filter>
  <filter>
    <display-name>FiltroUrl</display-name>
    <filter-name>FiltroUrl</filter-name>
    <filter-class>br.com.exemploAutenticacao.loginFiltro.FiltroUrl</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroUrl</filter-name>
    <url-pattern>/resources/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>filtroLogin</filter-name>
    <url-pattern>/validaSenhaLogin</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>validaSenhaLogin</servlet-name>
    <url-pattern>/validaSenhaLogin</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>FiltroDeslogar</display-name>
    <filter-name>FiltroDeslogar</filter-name>
    <filter-class>br.com.exemploAutenticacao.loginFiltro.FiltroDeslogar</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroDeslogar</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>